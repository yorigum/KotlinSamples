<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

	<TextView
	    android:id="@+id/connection_prompt_label"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/enter_mac" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="100">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="5" />

		<EditText
		    android:id="@+id/connection_editText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="95"
            android:selectAllOnFocus="true"
		    android:ems="10"
		    android:hint="@string/mac_hint"
		    android:inputType="text" />

	</LinearLayout>

	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/port_textView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/port" />

	<LinearLayout
	   android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="100">

	    <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="5" />

	    <EditText
	        android:id="@+id/port_editText"
	        android:layout_weight="95"
            android:selectAllOnFocus="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ems="10"
	        android:hint="@string/port_hint"
	        android:inputType="number" />
	</LinearLayout>
	
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="100">

		<Button
		    android:id="@+id/save_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginEnd="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_weight="50"
		    android:background="@drawable/custom_button_selector"
		    android:text="@string/Save_Done_Button"
		    android:textColor="@drawable/custom_button_text_color" />

		<Button
			android:text="@string/Cancel_Button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="50"
			android:background="@drawable/custom_button_selector"
		    android:textColor="@drawable/custom_button_text_color"
			android:id="@+id/cancel_button"/>
	</LinearLayout>
	
	
</LinearLayout>
